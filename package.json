{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^0.14.3",
    "lerna": "^3.3.2",
    "lint-staged": "^7.2.2",
    "prettier": "^1.6.1",
    "remark-cli": "^5.0.0",
    "remark-preset-github": "^0.0.9",
    "eslint": "^5.3.0",
    "eslint-config-prettier": "latest",
    "eslint-plugin-prettier": "latest",
    "set-npm-auth-token-for-ci": "^2.0.13"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ArcBlock/forge-js.git"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx,css,less,scss,json,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "lint": "lerna run lint",
    "build": "lerna run clean && lerna run build",
    "clean": "lerna clean",
    "test": "CI=1 lerna run test",
    "precommit": "lint-staged && lerna run precommit",
    "prepush": "lint-staged && lerna run prepush",
    "coverage": "lerna run coverage"
  }
}
