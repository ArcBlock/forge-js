{
  "name": "@arcblock/tx-util",
  "description": "Utility to work with forge transactions",
  "version": "1.6.3",
  "author": {
    "name": "wangshijun",
    "email": "shijun@arcblock.io",
    "url": "https://github.com/wangshijun"
  },
  "bugs": {
    "url": "https://github.com/ArcBlock/forge-js/issues",
    "email": "shijun@arcblock.io"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@arcblock/forge-sdk": "^1.6.3",
    "debug": "^4.3.1"
  },
  "devDependencies": {
    "jest": "^24.8.0",
    "remark-cli": "^5.0.0",
    "remark-preset-github": "^0.0.9"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github",
      [
        "validate-links",
        {
          "repository": "ArcBlock/forge-js"
        }
      ]
    ]
  },
  "homepage": "https://github.com/ArcBlock/forge-js/tree/master/forge/tx-util",
  "keywords": [
    "forge",
    "blockchain",
    "arcblock",
    "sdk",
    "nodejs"
  ],
  "license": "Apache-2.0",
  "main": "./lib/index.js",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ArcBlock/forge-js/tree/master/forge/tx-util"
  },
  "scripts": {
    "lint": "eslint lib tests",
    "lint:fix": "eslint --fix lib tests",
    "docs": "yarn generate-dts && yarn generate-docs && yarn cleanup-docs && yarn format-docs",
    "cleanup-docs": "node ../../tools/cleanup-docs.js docs/README.md $npm_package_name",
    "generate-dts": "j2d lib/index.js",
    "generate-docs": "jsdoc2md lib/index.js > docs/README.md",
    "format-docs": "remark . -o",
    "precommit": "CI=1 yarn test",
    "prepush": "CI=1 yarn test",
    "test": "yarn lint && node tools/jest.js",
    "coverage": "yarn lint && yarn test -- --coverage"
  },
  "gitHead": "554c17ccece77a1abc528348bee7f9e75865d918"
}
