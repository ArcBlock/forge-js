{
  "name": "@arcblock/graphql-client",
  "version": "0.18.0",
  "description": "graphql client to read/write data on forge powered blockchain",
  "keywords": [
    "graphql",
    "client",
    "forge",
    "blockchain",
    "arcblock"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "wangshijun <wangshijun2010@gmail.com>",
  "homepage": "https://github.com/arcblock/forge-js/packages/graphql-client",
  "license": "MIT",
  "main": "./lib/node.js",
  "browser": "./dist/browser.js",
  "files": [
    "dist",
    "lib"
  ],
  "dependencies": {
    "@arcblock/forge-wallet": "^0.18.0",
    "@arcblock/sdk-util": "^0.19.4",
    "babel-polyfill": "^6.26.0",
    "base64-url": "^2.2.0",
    "blueimp-md5": "^2.10.0",
    "camelcase": "^5.2.0",
    "debug": "^4.1.1",
    "phoenix": "^1.3.4",
    "phoenix-channels": "^1.0.0",
    "protobufjs": "^6.8.8",
    "wolfy87-eventemitter": "^5.2.5"
  },
  "devDependencies": {
    "axios": "^0.18.0",
    "axios-mock-adapter": "^1.15.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "graphql": "^14.1.1",
    "graphql-request": "^1.8.2",
    "jest": "^24.5.0",
    "remark-cli": "^5.0.0",
    "remark-preset-github": "^0.0.9",
    "rimraf": "^2.6.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github",
      [
        "validate-links",
        {
          "repository": "ArcBlock/forge-js"
        }
      ]
    ]
  },
  "scripts": {
    "lint": "eslint src",
    "clean": "rimraf lib && rimraf dist",
    "build-browser": "BABEL_ENV=browser babel ./src --out-dir ./dist --source-maps --copy-files && webpack -p",
    "build-node": "babel ./src --out-dir ./lib --source-maps --copy-files",
    "build": "yarn clean && yarn build-node && yarn build-browser",
    "generate-docs": "node tools/generate-docs.js",
    "format-docs": "remark . -o",
    "generate-dts": "node tools/generate-dts.js",
    "update-graphql-schema": "rm -f src/schema/graphql.json && node tools/update-graphql-schema.js",
    "update-protobuf-schema": "rm -f src/schema/protobuf.json && cp $FORGE_SDK_PROTO_GEN_DIR/spec.json src/schema/protobuf.json",
    "upgrade": "npm run update-graphql-schema && npm run update-protobuf-schema && npm run generate-docs && npm run generate-dts && npm run format-docs && npm run build",
    "precommit": "CI=1 yarn test",
    "prepush": "CI=1 yarn test",
    "test": "yarn lint && node tools/jest.js",
    "coverage": "yarn test -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArcBlock/forge-js.git"
  },
  "bugs": {
    "url": "https://github.com/ArcBlock/forge-js/issues"
  }
}
