    "@arcblock/graphql-client": "^0.28.4",
    "@arcblock/grpc-client": "^0.28.4",
    "debug": "^4.1.1"
  },
  "devDependencies": {
    "jest": "^23.5.0",
    "jsdoc-to-markdown": "^4.0.1",
    "remark-cli": "^5.0.0",
    "remark-preset-github": "^0.0.9"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github",
      [
        "validate-links",
        {
          "repository": "ArcBlock/forge-js"
        }
      ]
    ]
  },
  "homepage": "https://github.com/ArcBlock/forge-js/tree/master/packages/forge-sdk",
