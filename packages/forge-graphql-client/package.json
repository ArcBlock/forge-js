{
  "name": "@arcblock/forge-graphql-client",
  "version": "0.7.0",
  "description": "GraphQL Client for forge core",
  "keywords": [
    "graphql",
    "client",
    "forge",
    "blockchain",
    "arcblock"
  ],
  "author": "wangshijun <wangshijun2010@gmail.com>",
  "homepage": "https://github.com/arcblock/forge-js/packages/forge-graphql-client",
  "license": "MIT",
  "main": "./lib/client.js",
  "browser": "./dist/client.js",
  "files": [
    "dist",
    "lib"
  ],
  "dependencies": {
    "@arcblock/sdk-util": "^0.16.0",
    "babel-polyfill": "^6.26.0"
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.15.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "graphql": "^0.13.2",
    "graphql-request": "^1.8.2",
    "jest": "^23.5.0",
    "rimraf": "^2.6.2",
    "webpack": "^3",
    "webpack-cli": "^3.1.0"
  },
  "scripts": {
    "lint": "eslint src",
    "clean": "rimraf lib && rimraf dist",
    "build-browser": "BABEL_ENV=browser babel ./src --out-dir ./dist --source-maps --copy-files && webpack -p",
    "build-node": "babel ./src --out-dir ./lib --source-maps --copy-files",
    "build": "yarn clean && yarn build-node && yarn build-browser",
    "generate-docs": "node tools/generate-docs.js",
    "format-docs": "remark . -o",
    "update-schema": "node tools/update-schema.js",
    "upgrade": "npm run update-schema && npm run generate-docs && npm run format-docs",
    "precommit": "CI=1 yarn test",
    "prepush": "CI=1 yarn test",
    "test": "yarn lint && node tools/jest.js",
    "coverage": "yarn test -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArcBlock/forge-js.git"
  },
  "bugs": {
    "url": "https://github.com/ArcBlock/forge-js/issues"
  }
}
